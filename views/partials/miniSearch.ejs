<div class="flex flex-col">
<div class="flex items-center justify-center mb-8  ">
    <h1 class=" text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white"> <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Search</span> </h1>
    
</div>
<div class="w-[480px]  p-4 border  rounded-lg shadow   ">
    
    <%-include('../partials/searchbar')%>
        <div class="flow-root">
            <ul role="list" class="divide-y  divide-gray-700">
                <% users.forEach(user => { %>
                <a href="/profiles/<%=user._id%>">
                <li class="py-3 sm:py-4 ">
                    <div class="flex items-center space-x-4 ml-4">
                        <div class="flex-shrink-0">
                            <img class="w-16 h-16 rounded-full" src="<%=user.avatar%>" alt="Neil image">
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class=" text-xl font-medium  text-white">
                                <%=user.name%>
                            </p>
                            
                        </div>
                       
                    </div>
                </li>
                </a>
                <%}) %>
            </ul>

       </div>
   
    </div>

</div>