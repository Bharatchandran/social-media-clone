
<%if(tweets) { %>
 
    <% tweets.forEach(tweet => { %>
        <div class="relative mt-6 flex w-98 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md dark:bg-slate-800">
            <div class="p-6 ">
                <div class="flex">
                <img class="mb-2 h-12 w-12 rounded-md inline-block" src="<%=tweet.userAvatar%>" alt="">
                <div class="flex flex-col justify-center">
              <h5 class="  block font-sans text-xl text-white font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased inline-block ml-2 ">
                <%=tweet.userName%>
              </h5>
              <h8 class="ml-2"><span><%=tweet.createdAt.getDate()%></span>/<span><%=tweet.createdAt.getMonth() + 1%></span>/<span><%=tweet.createdAt.getFullYear()%></span>
              </h8>
            </div>
            </div>
              <div class="flex flex-col ">
                <div class="block  font-sans text-base text-white font-light leading-relaxed text-inherit antialiased ml-[57px] break-words "><%=tweet.content%></div>
            </div>
            </div>
            
            <div class="p-6 pt-0">
              <a
                class="!font-medium !text-blue-gray-900 !transition-colors hover:!text-pink-500 flex justify-end"
                href="/tweets/<%=tweet._id%>"
              >
                <button
                  class="flex justify-end  select-none items-center gap-2 rounded-lg py-2 px-4 text-center align-middle font-sans text-xs font-bold uppercase text-pink-500 transition-all hover:bg-pink-500/10 active:bg-pink-500/30 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                  type="button"
                  data-ripple-dark="true"
                >
                  comment
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    aria-hidden="true"
                    class="h-4 w-4"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                    ></path>
                  </svg>
                </button>
              </a>
            </div>
          </div>
          
   <% }) %>
<%}%>